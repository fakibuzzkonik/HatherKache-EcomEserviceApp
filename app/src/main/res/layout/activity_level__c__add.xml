<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Ui.Level_C_Add">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/level_c_imageview"
                    android:layout_width="135dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="40dp"
                    android:background="#222d"/>

                <EditText
                    android:id="@+id/level_c_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="35dp"
                    android:ems="10"
                    android:hint="Level 3 Name"
                    android:textColor="@color/colorBlack"
                    android:inputType="textPersonName"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/level_c_bio_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="bio"
                    android:layout_marginTop="15dp"
                    android:inputType="textCapSentences"
                    />
                <EditText
                    android:id="@+id/level_c_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Priority No"
                    android:inputType="number"
                    android:layout_marginTop="15dp"
                    />
                <EditText
                    android:id="@+id/level_c_view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="View Count"
                    android:inputType="number"
                    android:layout_marginTop="15dp"
                    />
                <EditText
                    android:id="@+id/level_c_total_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Total Products"
                    android:inputType="number"
                    android:layout_marginTop="15dp"
                    />

                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/level_c_privacy_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton android:id="@+id/level_c_public_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Public"
                            android:layout_marginRight="20dp"/>
                        <RadioButton android:id="@+id/level_c_private_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Private"
                            android:layout_marginLeft="20dp"/>
                    </RadioGroup>
                </LinearLayout>

                <Button
                    android:id="@+id/level_c_set_map_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"

                    android:paddingHorizontal="50dp"
                    android:text="MAP SET" />
                <Button
                    android:id="@+id/level_c_update_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"

                    android:paddingHorizontal="50dp"
                    android:text="UPDATE" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/refresh"
        android:id="@+id/level_c_set_map_frame">
    </FrameLayout>

</RelativeLayout>