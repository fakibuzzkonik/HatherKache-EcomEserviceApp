<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginHorizontal="6dp"
    android:layout_marginTop="10dp"
    android:id="@+id/cardview_order_item"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="4dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_item_invoice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Invoice ID : 1235134135"
            android:textColor="#2d2d2d"
            android:textSize="18sp"
            android:textStyle="bold"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_item_time_ago_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif-light"
            android:text="12 minutes ago"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            cardview:layout_constraintStart_toStartOf="@+id/order_item_invoice_text"
            cardview:layout_constraintTop_toBottomOf="@+id/order_item_invoice_text" />
        <TextView
            android:id="@+id/order_item_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif-light"
            android:text="05:12PM  12th May 2020"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            cardview:layout_constraintStart_toStartOf="@+id/order_item_time_ago_text"
            cardview:layout_constraintTop_toBottomOf="@+id/order_item_time_ago_text" />

        <TextView
            android:id="@+id/order_item_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="1200TK"
            android:textColor="@color/YellowDark"

            android:textStyle="bold"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintStart_toStartOf="@+id/order_item_date_text"
            cardview:layout_constraintTop_toBottomOf="@+id/order_item_date_text" />

        <LinearLayout
            android:id="@+id/order_item_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style_ripple_btn_p1"
            android:orientation="horizontal"
            cardview:layout_constraintBottom_toBottomOf="@+id/order_item_price_text"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintTop_toTopOf="@+id/order_item_price_text">

            <TextView
                android:id="@+id/order_item_processing_mode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Processing"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/style_ripple_textb_paid_round"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_item_money_mode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAID"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/style_ripple_text_paid_round"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>