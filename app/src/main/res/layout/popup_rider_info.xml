<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:gravity="center_horizontal"
    android:padding="15dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:text="Rider Information"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/rider_info_image"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_pedal_bike_24"
                app:tint="@color/purple_700" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rider_info_name"
                android:layout_width="match_parent"
                android:text="Rider Name"
                android:layout_margin="6dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" >

            </TextView>
            <TextView
                android:id="@+id/rider_info_last_time"
                android:layout_width="match_parent"
                android:text="Last Activity:"
                android:maxLines="1"
                android:layout_margin="6dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" >
            </TextView>
            <TextView
                android:id="@+id/rider_info_id"
                android:layout_width="match_parent"
                android:text="Rider ID:"
                android:maxLines="1"
                android:layout_margin="6dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" >
            </TextView>
            <TextView
                android:id="@+id/rider_info_address"
                android:layout_width="match_parent"
                android:text="Addres"
                android:layout_margin="6dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



